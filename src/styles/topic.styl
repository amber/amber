@import '_util'

.post
  container()
  margin-top 1rem
  margin-bottom 2rem
  position relative
  padding-left 64px
  box-sizing border-box

  > .author
    margin-bottom 8px
    font-size 0.8rem
    color rgba(0, 0, 0, .5)

    a
      text-decoration none

      &:hover
        text-decoration underline

  > img
    width 48px
    height 48px
    position absolute
    left 0
    top 0
    margin .25rem 8px 0 0
    float left
    -webkit-user-drag none
    background rgba(0, 0, 0, .05)

  p
    margin-top 0
    margin-bottom 1rem
