@import '_vars'
@import '_util'

.topic
  container()
  position relative
  display block
  margin-top 1rem

  font-weight 200

  .title
    display block
    padding-left 24px
    line-height 1.2
    font-weight 500

    .name
      font-weight @font-weight
      margin-right 8px


  .subtitle
    display block
    padding-left 24px
    font-size 0.8rem
    color rgba(0, 0, 0, .5)

    a
      color $foreground

  .read
    position absolute
    height 100%
    width 24px

    background 0
    padding 0
    margin 0
    border-right 8px solid transparent
    border-left @border-right
    box-shadow inset 8px 0 rgba(0, 0, 0, .1)
    visibility hidden

    &:hover
      box-shadow inset 8px 0 rgba(0, 0, 0, .4)

    &:active
      box-shadow inset 8px 0 rgba(0, 0, 0, .5)

  &.unread .read
    visibility visible

  .star
    float right
    width 2.4rem
    height 2.4rem
    line-height @height
    text-align center
    color rgba(0, 0, 0, .1)
    cursor pointer

    background 0
    box-shadow none
    padding 0
    margin 0
    opacity 0

    &:hover
      color rgba(0, 0, 0, .2)

    &:active
      color rgba(0, 0, 0, .3)

    &::before
      // content '☆'
      content '★'
      font-size 1.4rem

  &:hover .star
    opacity 1

  &.starred
    &:hover .star
      color rgba(0, 0, 0, .5)

    .star
      opacity 1
      color rgba(0, 0, 0, .3)

      &:hover
        color rgba(0, 0, 0, .7)

      &:active
        color rgba(0, 0, 0, .5)

  a
    text-decoration none

    &:hover
      text-decoration underline

  .tag
    display inline-block
    vertical-align top
    cursor pointer
    font-size 0.7rem
    line-height 1.2
    font-weight 200
    letter-spacing 0.02em
    padding 2px 8px
    margin .1rem 0 .1rem 8px
    color rgba(255, 255, 255, .9)
    background #777

  .tag-announcement
    background #135
  .tag-suggestion
    background #381
  .tag-bug
    background #d12
  .tag-request
    background #27e
  .tag-help
    background #804
