@import '_vars'
@import '_util'

.splash
  clearfix()
  container()

  .left
    width 19rem
    float left

  .right
    margin-top 2rem
    width $page-width - 19rem - 2rem
    float right

  @media (max-width: 800px)
    .left, .right
      float none
      margin-left auto
      margin-right auto
      max-width 100%
