@import '_util'
@import '_colors'

.editor
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #fff
  font-size .8rem

  .left-panel
    position absolute
    top 0
    left 0
    width 640px
    height 100%

    .stage
      position absolute
      top 0
      left 0
      width 480px
      height 360px
      background #fff

    .sprite-list
      position absolute
      top 360px
      left 0
      right 0
      bottom 0
      // background #f5f5f5
      background #fff

  .bar
    position absolute
    top 0
    left 0
    width 100%
    height 34px
    // background #eaeaea
    background $nav-background
    color $nav-foreground

    .tab
      width: 24.999%
      display inline-block
      line-height 34px
      text-align center
      font-weight 200
      cursor pointer

      &:active
        background $nav-background-active

      &.active
        cursor default
        background #fff
        color #000

  .tab-panel
    position absolute
    top 0
    left 480px
    // border-left 8px solid #666
    // border-left 4px solid #ddd
    border-left 4px solid $nav-background
    right 0
    height 100%
    background #fff

    .panel-content
      position absolute
      top 34px
      left 0
      right 0
      bottom 0

    .palette
      position absolute
      top 0
      right 0
      width 240px
      height 100%
      background #f5f5f5

    .scripts
      position absolute
      top 0
      left 0
      right 240px
      height 100%
      cursor default
      overflow auto
      // border-right 4px solid #ddd
      // border-right 4px solid $nav-background

.abs
  position: absolute
  top 0
  left 0
  pointer-events none

.label
  color #fff
  font-weight 400
  // letter-spacing .03em
  font-size .7rem
  line-height 1.2

  &.metrics
    metrics()

.string-arg
  background #fff
  border 0
  margin 0
  box-sizing border-box
  padding 0 5px
  border-radius 9999px
  color #000
  font inherit
  font-size .7rem
  line-height 1.2

  &.metrics
    metrics()
