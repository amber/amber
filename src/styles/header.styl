@import '_vars'

header
  height 40px
  line-height 40px
  font-size 0.8rem
  font-weight 200
  letter-spacing 0.03em

  background $nav-background
  color $nav-foreground

  input[type=search]
    -webkit-appearance none
    float right
    border 0
    outline 0
    margin 8px 0
    padding 0 8px
    height 24px
    border-radius @height
    font 0.8rem / @height $base-font-family

    background rgba(255, 255, 255, .8)

    &::-webkit-input-placeholder
      color $placeholder-foreground

    &:focus
      background #fff

  a
    display block
    float left
    padding 0 12px
    color $nav-foreground
    text-decoration none

    &:first-child
      font-weight 500
      letter-spacing 0
      margin-left -12px

    &:hover
      // text-decoration underline
      color $nav-foreground-hover
