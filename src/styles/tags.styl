  .tag
    display inline-block
    vertical-align top
    cursor pointer
    font-size 0.7rem
    line-height 1.2
    font-weight 200
    letter-spacing 0.02em
    padding 2px 8px
    margin .1rem 8px .1rem 0
    color rgba(255, 255, 255, .9) !important
    background #777
    text-decoration none !important

    &:hover
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)

    &:active
      box-shadow inset 0 2px 5px rgba(0, 0, 0, .2)
      padding 3px 8px 1px

  .tag-announcement
    background #135
  .tag-suggestion
    background #381
  .tag-bug
    background #d12
  .tag-request
    background #27e
  .tag-question
    background #804
  .tag-help
    background #85c
  .tag-tutorial
    background #c18
  .tag-fixed
    background #333
  .tag-wiki
    background #29c
  .tag-pineapple
    background #fd3
    color #800 !important
