@import '_vars'
@import '_util'

html
  background $background
  color $foreground
  font $base-font-size/$base-line-height $base-font-family

html
body
  margin 0

.container
  container()
  padding 0 16px

article
  clearfix()
  padding 0 16px

  p
    container()
    margin-top 1rem

  h1
    container()
    font-size 3rem
    line-height 1
    font-weight 200
    margin-top 3rem

    &:first-child
      margin-top 2rem

  h2
    container()
    font-size 2em
    line-height 1
    font-weight 200
    margin-top 3rem

  a
    color $foreground
    text-decoration underline

    &:hover
      color #25c

  code
    font 0.8rem $code-font

  pre
    margin 1rem -16px 0

    > code
      overflow auto
      display block
      container()
      padding 16px
      background rgba(0, 0, 0, .05)


  input
    -webkit-appearance none
    position relative
    border 0
    outline 0
    margin .25em 0
    border 1px solid rgba(0, 0, 0, .1)
    width 100%
    box-sizing border-box
    padding 0 8px
    height 2.5rem
    font 1.2rem / @height $base-font-family

    &:focus
      z-index 1
      border-color rgba(0, 0, 0, .2)

  button
  .button
    -webkit-appearance none
    cursor pointer
    border 0
    outline 0
    margin 1rem 0 0
    width 100%
    box-sizing border-box
    padding 0 8px
    height 2.5rem
    font 200 1.2rem / @height $base-font-family
    letter-spacing 0.05em
    background $accent-background
    color $accent-foreground
    text-decoration none
    text-align center

    &:focus
      box-shadow inset 0 0 0 1px rgba(0, 0, 0, .2)

    &:hover
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)
      color $accent-foreground

    &:active
      background $accent-background-active
      box-shadow inset 0 3px 8px rgba(0, 0, 0, .2)
      padding-top 2px
