@import 'colors'

$page-width = 40rem

html
  background $background
  color $foreground
  font 20px/1.5 Helvetica Neue, Helvetica, Arial, sans-serif

html
body
  margin 0

.clearfix
  &::after
    content ''
    display block
    clear both

.container
  margin 0 auto
  max-width $page-width

header
  height 40px
  line-height 40px
  font-size 0.8rem
  font-weight 200
  letter-spacing 0.03em

  background $nav-background
  color $nav-foreground

  a
    display block
    float left
    padding 0 12px
    color $nav-foreground
    text-decoration none

    &:first-child
      font-weight 500
      letter-spacing 0

    &:hover
      // text-decoration underline
      color $nav-foreground-hover


article
  @extend .clearfix

  padding 0 16px

  p
    @extend .container
    margin-top 1rem

  h1
    @extend .container
    font-size 3rem
    line-height 1
    font-weight 200
    margin-top 3rem

    &:first-child
      margin-top 2rem

  h2
    @extend .container
    font-size 2em
    line-height 1
    font-weight 200
    margin-top 3rem

footer
  @extend .container
  margin-top 3rem
  padding 0 16px 16px

  font-size 0.8rem
  font-weight 200
  letter-spacing 0.05em
  color rgba(0, 0, 0, .6)
